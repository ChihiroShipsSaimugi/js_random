<!DOCTYPE html>
<html>
    <head>
        <style>
            body{
                display:flex;
                flex-wrap: wrap;
            }
        </style>
    </head>
	<body>
	
	<script>
	    for(var i = 0; i < 49; i++){
	        var block = document.createElement("div");
	        block.style.height = "60px";
            block.style.width = "20%";
	        block.style.backgroundColor = i % 2 === 0 ? "black" : "red";
	        document.body.appendChild(block);
	    }
	</script>
	</body>
</html>
